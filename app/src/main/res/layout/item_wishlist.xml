<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/add_form_bg"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Game"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga: 0"
        android:textColor="@android:color/white"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txtTabungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabungan/Hari: 0"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txtPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan: Harian"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/txtHari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butuh: - hari"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>
