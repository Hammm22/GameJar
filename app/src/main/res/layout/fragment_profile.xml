<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_theme"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_game_style"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="15dp"

        android:padding="12dp" android:orientation="horizontal">
        <ImageView
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@drawable/profil_bulat"/>
        <Space
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ProfileNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15pt"
                android:text=""/>
            <Space
                android:layout_width="50dp"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/ProfileNoTelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="11pt"
                android:text=""/>
        </LinearLayout>



    </LinearLayout>
        <Space
            android:layout_width="50dp"
            android:layout_height="40dp"/>
    <Button
        android:id="@+id/TombolLogOut"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="10pt"
        android:background="@drawable/search_game_style"
        android:text="LOGOUT"
        android:textColor="#FF0000"
    android:layout_width="150dp"
    android:layout_height="50dp"/>
    </LinearLayout>
</FrameLayout>
